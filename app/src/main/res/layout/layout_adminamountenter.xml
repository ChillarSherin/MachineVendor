<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#F2F2F2"

    >

    <RelativeLayout
        android:id="@+id/layout_actionbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:background="@color/actionbarbg"
        android:gravity="center_vertical|left"
        android:orientation="horizontal">



        <ImageView
            android:id="@+id/drawer_indicator"
            android:layout_width="56dp"
            android:layout_height="fill_parent"
            android:layout_gravity="start"
            android:background="@drawable/drawer_selector"
            android:scaleType="centerInside" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/drawer_indicator"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textAllCaps="false"
            android:layout_marginLeft="10dp"
            android:id="@+id/textView15" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >

        <EditText
            android:id="@+id/admineditTextamt"
            android:layout_width="245dp"
            android:layout_height="75dp"
            android:background="@drawable/bg_edittext"
            android:layout_marginTop="30dp"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:textColor="#360f35"
            android:textColorHint="#CFCFCF"
            android:textSize="65dp"
            android:inputType="number"
            android:hint="amount"

            android:paddingLeft="10dp"
            android:drawablePadding="15dp"
            />



        <Button
            android:id="@+id/adminbuttonpayamt"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:text="Pay"
            android:textColor="#FFFF"
            android:textAllCaps="false"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_signinbtn"/>
    </LinearLayout>

</LinearLayout>
