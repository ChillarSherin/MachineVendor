<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <RelativeLayout
        android:id="@+id/layout_actionbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:background="@color/actionbarbg"
        android:gravity="center_vertical|left"
        android:orientation="horizontal">



        <ImageView
            android:id="@+id/drawer_indicator"
            android:layout_width="56dp"
            android:layout_height="fill_parent"
            android:layout_gravity="start"
            android:background="@drawable/drawer_selector"
            android:scaleType="centerInside" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Card Transfer"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/drawer_indicator"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textAllCaps="false"
            android:layout_marginLeft="10dp"
            android:id="@+id/textView15" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_actionbar">

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_signinbtn"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:id="@+id/btnInitiate"
            android:text="Initiate Transfer"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_signinbtn"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:id="@+id/btnBlock"
            android:layout_below="@+id/btnInitiate"
            android:layout_marginTop="15dp"
            android:text="Block Card"/>


    </RelativeLayout>




</RelativeLayout>