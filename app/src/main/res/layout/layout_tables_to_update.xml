<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/layout_actionbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:background="@color/actionbarbg"
        android:gravity="center_vertical|left"
        android:orientation="horizontal">



        <ImageView
            android:id="@+id/drawer_indicator"
            android:layout_width="56dp"
            android:layout_height="fill_parent"
            android:layout_gravity="start"
            android:background="@drawable/drawer_selector"
            android:scaleType="centerInside" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tables To Update"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/drawer_indicator"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textAllCaps="false"
            android:layout_marginLeft="10dp"
            android:id="@+id/textView15" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Report"
            android:id="@+id/report"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:textColor="@color/white"
            android:background="@drawable/bg_edittext_blue"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Success Transactions"
                android:background="@drawable/bg_edittext"
                android:id="@+id/success_trans"/>

            <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Payment Transactions"
                android:background="@drawable/bg_edittext"
                android:layout_marginTop="15dp"
                android:id="@+id/payment_trans"/>

            <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Recharge"
                android:background="@drawable/bg_edittext"
                android:layout_marginTop="15dp"
                android:id="@+id/recharg_table"/>


            <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Library"
                android:background="@drawable/bg_edittext"
                android:layout_marginTop="15dp"
                android:id="@+id/library"/>


            <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Attendence"
                android:background="@drawable/bg_edittext"
                android:layout_marginTop="15dp"
                android:id="@+id/attendence"/>

            <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="FEE"
                android:background="@drawable/bg_edittext"
                android:layout_marginTop="15dp"
                android:id="@+id/fee"/>

            <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="ITEM SALE"
                android:background="@drawable/bg_edittext"
                android:layout_marginTop="15dp"
                android:id="@+id/itemsale"/>


            <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="ONLINE TRANSACTION"
                android:background="@drawable/bg_edittext"
                android:layout_marginTop="15dp"
                android:id="@+id/online"/>

            <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="PARENT LEAVE"
                android:background="@drawable/bg_edittext"
                android:layout_marginTop="15dp"
                android:id="@+id/parentLeave"/>

            <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="REFUND"
                android:background="@drawable/bg_edittext"
                android:layout_marginTop="15dp"
                android:id="@+id/refund"/>

            <View
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
