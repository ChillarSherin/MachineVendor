<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/actionbarbg"
    android:paddingBottom="10dp"
    android:orientation="vertical"
    android:gravity="center"
    >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
        android:padding="5dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Card Serial : "
            android:textColor="@color/white"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TEST"
            android:id="@+id/cardsl1"
            android:textColor="@color/white"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
        android:padding="5dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Balance : "
            android:textColor="@color/white"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TEST"
            android:id="@+id/balan1"
            android:textColor="@color/white"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
        android:padding="5dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Withdrawing Amount : "
            android:textColor="@color/white"
            />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <EditText
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:paddingLeft="5dp"
                android:inputType="number"
                android:id="@+id/amount"
                android:background="@drawable/bg_edittext"
                />

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:id="@+id/progress"
                />


        </FrameLayout>



    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btnok"
            android:layout_width="110dp"
            android:layout_height="35dp"
            android:text="Confirm"
            android:textColor="#FFFF"
            android:textAllCaps="false"
            android:gravity="center"
            android:layout_below="@+id/et_otp"
            android:background="@drawable/bg_signinbtn"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:id="@+id/btnno"
            android:layout_width="110dp"
            android:layout_height="35dp"
            android:text="Cancel"
            android:textColor="#FFFF"
            android:textAllCaps="false"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_below="@+id/et_otp"
            android:background="@drawable/bg_signinbtn"
            android:layout_centerHorizontal="true"
            />
    </LinearLayout>



</LinearLayout>
