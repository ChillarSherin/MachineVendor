<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/layout_actionbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:background="@color/actionbarbg"
        android:gravity="center_vertical|left"
        android:orientation="horizontal">



        <ImageView
            android:id="@+id/drawer_indicator"
            android:layout_width="56dp"
            android:layout_height="fill_parent"
            android:layout_gravity="start"
            android:background="@drawable/drawer_selector"
            android:scaleType="centerInside" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Card Activation"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/drawer_indicator"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textAllCaps="false"
            android:layout_marginLeft="10dp"
            android:id="@+id/textView15" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center">
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/cardactivate"
            android:background="@drawable/bg_edittext"
            android:gravity="center"
            android:textAllCaps="true"
            android:text="Activate Card"
            />
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/card_repair"
            android:background="@drawable/bg_edittext"
            android:gravity="center"
            android:textAllCaps="true"
            android:text="Card Repair"
            android:layout_marginTop="15dp"
            android:visibility="gone"
            />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/card_open"
            android:background="@drawable/bg_edittext"
            android:gravity="center"
            android:textAllCaps="true"
            android:text="Open Sector1"
            android:layout_marginTop="15dp"
            />

    </LinearLayout>



</LinearLayout>
